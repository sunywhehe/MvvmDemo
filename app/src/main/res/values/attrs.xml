<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LitePager">
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="flingDuration" format="integer" />
        <attr name="bottomScale" format="float" />
        <attr name="bottomAlpha" format="float" />
        <attr name="middleScale" format="float" />
        <attr name="middleAlpha" format="float" />
        <attr name="topScale" format="float" />
        <attr name="topAlpha" format="float" />
    </declare-styleable>
    <declare-styleable name="SwipePanel">
        <attr name="leftSwipeColor" format="color"/>
        <attr name="topSwipeColor" format="color"/>
        <attr name="rightSwipeColor" format="color"/>
        <attr name="bottomSwipeColor" format="color"/>
        <attr name="leftEdgeSize" format="dimension"/>
        <attr name="topEdgeSize" format="dimension"/>
        <attr name="rightEdgeSize" format="dimension"/>
        <attr name="bottomEdgeSize" format="dimension"/>
        <attr name="leftDrawable" format="reference"/>
        <attr name="topDrawable" format="reference"/>
        <attr name="rightDrawable" format="reference"/>
        <attr name="bottomDrawable" format="reference"/>
        <attr name="isLeftCenter" format="boolean"/>
        <attr name="isTopCenter" format="boolean"/>
        <attr name="isRightCenter" format="boolean"/>
        <attr name="isBottomCenter" format="boolean"/>
        <attr name="isLeftEnabled" format="boolean"/>
        <attr name="isTopEnabled" format="boolean"/>
        <attr name="isRightEnabled" format="boolean"/>
        <attr name="isBottomEnabled" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="GradientProgressbar">
        <!--进度起始色-->
        <attr name="progressStartColor" format="color"/>
        <!--进度结束色-->
        <attr name="progressEndColor" format="color"/>
        <!--背景起始色-->
        <attr name="bgStartColor" format="color"/>
        <!--背景中间色-->
        <attr name="bgMidColor" format="color"/>
        <!--背景结束色-->
        <attr name="bgEndColor" format="color"/>
        <!--进度值 介于0-100-->
        <attr name="progress" format="integer"/>
        <!--进度宽度-->
        <attr name="progressWidth" format="dimension"/>
        <!--起始角度-->
        <attr name="startAngle" format="integer"/>
        <!--扫过的角度-->
        <attr name="sweepAngle" format="integer"/>
        <!--是否显示动画-->
        <attr name="showAnim" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="SegmentControl">
        <attr name="android:radius" format="dimension|reference"/>
        <attr name="normalColor" format="color|reference" />
        <attr name="selectedColor" format="color|reference" />
        <attr name="backgroundColors" format="color|reference"/>
        <attr name="textColors" format="color|reference"/>
        <attr name="texts" format="string|reference"/>
        <attr name="textBold" format="boolean"/>
        <attr name="android:textSize"/>
        <attr name="android:orientation" />
        <!-- 外部边框的width -->
        <attr name="boundWidth" format="dimension|reference"/>
        <!-- 内部边框的width -->
        <attr name="separatorWidth" format="dimension|reference"/>
        <attr name="gaps" format="dimension|reference"/>
        <attr name="horizonGap" format="dimension|reference"/>
        <attr name="verticalGap" format="dimension|reference"/>
    </declare-styleable>
    <declare-styleable name="GradientButton">
        <attr name="gbOrientation" format="enum">
            <enum name="top_bottom" value="0" />
            <enum name="tr_bl" value="1" />
            <enum name="right_left" value="2" />
            <enum name="br_tl" value="3" />
            <enum name="bottom_top" value="4" />
            <enum name="bl_tr" value="5" />
            <enum name="left_right" value="6" />
            <enum name="tl_br" value="7" />
        </attr>
        <attr name="gradient" format="reference" />
        <attr name="startColor" format="color" />
        <attr name="endColor" format="color" />
        <attr name="stroke" format="dimension" />
        <attr name="circular" format="boolean" />
        <attr name="filled" format="boolean" />
        <attr name="fillColor" format="color" />
    </declare-styleable>
</resources>